[user]
	name = Sebastian Witowski
	email = sebastian.witowski@gmail.com

[alias]
	amend = commit --amend
	br = branch
	ci = commit
	co = checkout
	d = diff
	ds = diff --staged
	l = log
    loq = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)â€” %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
	lp = log --pretty=oneline
	sa = stash apply
	sh = show
	ss = stash save
	st = status
	
[color]
	ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
	editor = vim
